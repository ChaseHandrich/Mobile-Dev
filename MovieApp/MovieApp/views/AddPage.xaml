<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieApp.views.AddPage"
             Title="Add New Movie">
    <VerticalStackLayout Padding="30,30">
        <Label Text="Add Movie Title" FontSize="Large"/>
        <Border Stroke="gray" StrokeThickness="1">
            <Entry x:Name="txtTitle"/>
        </Border>
      
        <Label Text="Movie Rating" FontSize="Large"/>
         <Border Stroke="gray" StrokeThickness="1">
            <Entry x:Name="txtRating"/>
        </Border>

        <Button Text="Add" Clicked="Add_Clicked"/>
    </VerticalStackLayout>
</ContentPage>
